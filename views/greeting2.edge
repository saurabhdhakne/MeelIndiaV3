body{
    overflow-x: hidden;
    background: linear-gradient(salmon, #78ffd6);
}
.socialbtn{
       text-decoration: none;
       color: black;
}
.socialbtn:hover{
    color: dodgerblue;
    cursor: pointer;
}
.btn-primary
{
    font-family: 'Amaranth', sans-serif;
    background: #000;
    border: #000;
}
h1{
    font-size: 4em;
    font-family: 'play', cursive;
    color: #76BAA1;
    text-shadow: 1px 2px 5px;
}

.headingmain
{
    font-family: 'Righteous', cursive;
    color: #000;
    font-size: 100px;
}    

.subheadingmain
{
    font-family: 'Cookie', cursive;
    font-size: 35px;
}
.btn-danger
{
    font-family: 'Amaranth', sans-serif;
}


#inviteBody{
    min-height: 700px;
    width: 350px;
    margin:auto;
    background: cover;
    /* font-family: 'Dancing Script', cursive; */
    background-color: black;
    background: url('{{ greetings[0].bg }}');
    /* background-size: 350px 700px; */
    background-repeat: no-repeat;
    background-size:100% 100% ;
    padding-top: 350px;
     
}   
#inviteBody{
    box-shadow: 0px 2px 10px black;
    margin-bottom: 20px;
}
#bgInvite{
    width: 350px;
    position: absolute;
    padding: 0;
    margin-top: 0;
    z-index: 1;
    display: none;
}
.dataInvite{
    width: 100%;
}

.inputInvite{
        width: 350px;
        z-index: 9;
        color: #fff;
        text-shadow: 0 2px 5px black;
        -webkit-text-stroke-width: .5px;
        -webkit-text-stroke-color: black;
    }
    .inputInvite::-webkit-scrollbar {
        width: 5px;
    }
    .inputInvite::-webkit-scrollbar-track {
        background: #f1f1f1;
    }
    .inputInvite::-webkit-scrollbar-thumb {
        background: salmon;
    }
    .inputInvite:hover{
        background: transparent;
    }
    .inputInvite:focus{
        background: transparent;
    }
    
.search-input {
font-family:'play';

}
.search-input,
.leaflet-control-search {
    max-width:450px;
    background: black;
    padding:5px;
}

@media(max-width:522px)
{
        
    .headingmain
    {
        font-size: 50px;
    }    
    .subheadingmain
    {
        font-size: 25px;
    }

}

</style>
</head>
<body>
<div class="containetr">
   
    <div class="col-md-6 offset-md-3 pb-5">
        <div class="row">
            @each(dt in greetings)
            <div class="col-md-12 mt-5">
                
                <div class="col-md-12 d-flex justify-content-center mb-5">

                    <a class="socialbtn h1 d-flex  mr-4" href="whatsapp://send?text=The%20generated%20link%20is%20digital%20invitation%20carddevelop%20by%20MeelIndia%20https://meelindia.com/greeting?id={{dt._id}}"><i class="fa fa-whatsapp" aria-hidden="true"></i></a> 
                    <a class="socialbtn h1 d-flex  mr-3" href="https://www.facebook.com/sharer/sharer.php?u=https://meelindia.com/greeting?id={{dt._id}}"><i class="fa fa-facebook-official" aria-hidden="true"></i></a> 
                    <a class="socialbtn h1 d-flex  ml-4" onclick='myFunction("{{ dt._id }}");'> <i class="fa fa-copy" aria-hidden="true"></i></a>
                </div>

                <div class="invite shadowme" id="inviteBody">
                    {{--  <img src="{{dt.bg}}" id="bgInvite" alt="">  --}}
                    <div class="dataInvite">
                        <h4 class="col-12 Caveat inputInvite text-center" style="font-family:{{ dt.nameFont}}; font-size:2.5em;"> {{ dt.title }}</h4>
                        <p class="col-12 Caveat inputInvite text-center" style="font-family:{{ dt.bodyFont}}; font-size:1.5em;">{{ dt.content}} </p>
                    </div>
                </div> 
                <div class="col-md-8 offset-md-2 mb-2 text-center">
                    <a class="socialbtn h1 col-12 m-2 display-1" onclick="doCapture();" > <i class="fa fa-download" aria-hidden="true"></i></a>
                </div> 
                
        </div>
             
            @endeach
            <input type="button" value="MeelIndia Home" class="btn btn-danger mt-2 mb-1 col-md-5" onclick="window.location='profileUser'">
            <input type="button" value="Create Your Own Invitation / Greeting" class="btn btn-danger mt-2 mb-1 col-md-5 offset-md-2" onclick="window.location='SignUpUser'">
            <br> <br>
            

        </div>
    </div>
</div>

<script>

    function myFunction(str) {
            var copyText = 'https://meelindia.com/greeting?id='+str;
            navigator.clipboard.writeText(copyText);
            alert("Copied the text: " + copyText);
        }
        var doc = new jsPDF();
